<?php

$nodes = array();

	foreach ($this->files['trees'] as $tree) {
		$nodes[] = array(
			'text' => $tree['name'],
			'id' => $tree['hash'],
			'cls' => 'folder',
		);
	}

	foreach ($this->files['blobs'] as $blob) {
		$nodes[] = array(
			'text' => $blob['name'],
			'id' => $blob['hash'],
			'cls' => 'file',
			'leaf' => true
		);
	}
	
echo json_encode($nodes);